Элемент_Кнопка1.ПоложениеКартинки = ПоложениеКартинкиКнопкиФормы.Лево;
Элемент_Кнопка1.Отображение = ОтображениеКнопки.КартинкаИТекст;

Элемент_Меню = Элементы.Добавить("Меню", Тип("ГруппаФормы"), Элемент_КоманднаяПанель);
Элемент_Меню.Вид = ВидГруппыФормы.Подменю;
Элемент_Меню.Заголовок = "Меню";
Элемент_Меню.Отображение = ОтображениеКнопки.КартинкаИТекст;

Элемент_Подменю = Элементы.Добавить("Подменю", Тип("КнопкаФормы"), Элемент_Меню);
Элемент_Подменю.ИмяКоманды = "__КомандаЗаглушка";
Элемент_Подменю.Заголовок = "Подменю";
Элемент_Подменю.ПоложениеКартинки = ПоложениеКартинкиКнопкиФормы.Лево;
Элемент_Подменю.Отображение = ОтображениеКнопки.КартинкаИТекст;