	Иначе
		мАСД = Парсер().Разобрать(__Редактор);
	КонецЕсли;
	ОписанияРеквизитов = ОпределительРеквизитов().Заполнить(мАСД); 

	УправлениеСвойствами().ЗаполнитьНеизвестныеСвойства(мАСД, мВсеСвойства);
	
	ФормаПросмотр = ОткрытьФорму(__ИдентификаторОбработки + ".Форма.ФормаПросмотр", , ЭтаФорма);
	ФормаПросмотр.Построить(мАСД, ОписанияРеквизитов);
КонецПроцедуры

