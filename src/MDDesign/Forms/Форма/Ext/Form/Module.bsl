&НаКлиенте
Процедура ПарсингСтрочногоЭлемента(ПараметрыВыполнения, ЭлементДанных)

	Если ПарсингГоризонтальнойГруппы(ЭлементДанных) Тогда
		Возврат;
	КонецЕсли;

	Если ПарсингОднострочнойГруппы(ЭлементДанных) Тогда
		Возврат;
	КонецЕсли;
	
	Если ПарсингСтраниц(ЭлементДанных) Тогда
		Возврат;
	КонецЕсли;
	
	Текст = ЭлементДанных.Текст;
	
	СтрРасположение = ВыделитьНачальныйКонечныйСимволы(Текст, "->", "<-");
	Текст = СтрРасположение.Текст;
	Если СтрРасположение.ЕстьНачальный И СтрРасположение.ЕстьКонечный Тогда
		ПараметрыВыполнения.НаборСвойств.Вставить("ГоризонтальноеПоложение", "Центр");
	ИначеЕсли СтрРасположение.ЕстьНачальный Тогда
		ПараметрыВыполнения.НаборСвойств.Вставить("ГоризонтальноеПоложение", "Право");
	КонецЕсли;
	
	ТекстБезСвойств = ПарсингНабораСвойств(ПараметрыВыполнения, ПараметрыВыполнения.НаборСвойств, Текст);

	Если ПарсингКоманднойПанели(ПараметрыВыполнения, ТекстБезСвойств) Тогда
		ПараметрыВыполнения.ПолеВвода = Неопределено;
		ПараметрыВыполнения.Таблица = Неопределено;    
		ПараметрыВыполнения.ТаблицаЗаголовокЗаполнен = Ложь;    
		ПараметрыВыполнения.ТаблицаИерархия = Новый Массив;    
			
		Возврат;
	КонецЕсли;

	Если ПарсингТаблицы(ПараметрыВыполнения, Текст) Тогда
		ПараметрыВыполнения.ПолеВвода = Неопределено;
		
		Возврат;
	КонецЕсли;

	Если ПарсингПоляВвода(ПараметрыВыполнения, ТекстБезСвойств) Тогда
		ПараметрыВыполнения.Таблица = Неопределено;    
		ПараметрыВыполнения.ТаблицаЗаголовокЗаполнен = Ложь;    
		ПараметрыВыполнения.ТаблицаИерархия = Новый Массив;    
		
		Возврат;
	КонецЕсли;

	Если ПарсингФлажкаЛевый(ПараметрыВыполнения, ТекстБезСвойств) Тогда
		ПараметрыВыполнения.ПолеВвода = Неопределено;
		ПараметрыВыполнения.Таблица = Неопределено;    
		ПараметрыВыполнения.ТаблицаЗаголовокЗаполнен = Ложь;    
		ПараметрыВыполнения.ТаблицаИерархия = Новый Массив;    
		
		Возврат;
	КонецЕсли;
	
	Если ПарсингФлажкаПравый(ПараметрыВыполнения, ТекстБезСвойств) Тогда
		ПараметрыВыполнения.ПолеВвода = Неопределено;
		ПараметрыВыполнения.Таблица = Неопределено;    
		ПараметрыВыполнения.ТаблицаЗаголовокЗаполнен = Ложь;    
		ПараметрыВыполнения.ТаблицаИерархия = Новый Массив;    
		
		Возврат;
	КонецЕсли;

	Если ПарсингМногострочногоПоляВвода(ПараметрыВыполнения, ТекстБезСвойств) Тогда
		ПараметрыВыполнения.Таблица = Неопределено;    
		ПараметрыВыполнения.ТаблицаЗаголовокЗаполнен = Ложь;    
		ПараметрыВыполнения.ТаблицаИерархия = Новый Массив;    
		
		Возврат;
	КонецЕсли;

	Если ПарсингНадписи(ПараметрыВыполнения, ТекстБезСвойств) Тогда
		ПараметрыВыполнения.ПолеВвода = Неопределено;
		ПараметрыВыполнения.Таблица = Неопределено;    
		ПараметрыВыполнения.ТаблицаЗаголовокЗаполнен = Ложь;    
		ПараметрыВыполнения.ТаблицаИерархия = Новый Массив;    
		
		Возврат;
	КонецЕсли;

КонецПроцедуры    

