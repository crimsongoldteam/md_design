Функция ПолучитьПредставлениеДанных(ЭлементДанных)
	Результат = Новый Структура("Тип", ЭлементДанных.Тип);
	
	Если ЭлементДанных.Свойство("НаборСвойств") и ЭлементДанных.НаборСвойств.Свойство("Заголовок") Тогда
		Результат.Вставить("Заголовок", ЭлементДанных.НаборСвойств.Заголовок);
	КонецЕсли;

	Если ЭлементДанных.Свойство("Текст") И Не ПустаяСтрока(ЭлементДанных.Текст.Значение) Тогда
		Результат.Вставить("Текст", ЭлементДанных.Текст.Значение);
	КонецЕсли;
	
	Если ЭлементДанных.Свойство("Элементы") и ЭлементДанных.Элементы.Количество() > 0 Тогда
		Результат.Вставить("Элементы", ПолучитьПредставлениеМассиваДанныхНаСервере(ЭлементДанных.Элементы));
	КонецЕсли; 

	Если ЭлементДанных.Свойство("ЭлементыПарсинг") и ЭлементДанных.ЭлементыПарсинг.Количество() > 0 Тогда
		Результат.Вставить("ЭлементыПарсинг", ПолучитьПредставлениеМассиваДанныхНаСервере(ЭлементДанных.ЭлементыПарсинг));
	КонецЕсли; 

	Возврат Результат;
КонецФункции

