			ВертикальнаяГруппа.Элементы.Добавить(ТекЭлемент);
		КонецЦикла;
		
		ВертикальнаяГруппа.НаборСвойств.Заголовок = Строка.Заголовок;
		
		Результат.Добавить(ВертикальнаяГруппа);
		
		Строка.Порядок = Порядок;
		Порядок = Порядок + 1;
